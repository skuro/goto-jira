{
    "manifest_version": 2,

    "name": "GOTO Jira",
    "description": "Handy ways to navigate to your JIRA issues",
    "version": "0.1",

    "permissions": [
        "tabs",
        "<all_urls>"
    ],

    "content_scripts": [
        {
            "matches" : ["<all_urls>"],
            "js"      : ["content/mustache.js", "content/getselection.js"],
            "css"     : ["content/getselection.css"]
        }
    ]
}
